# SingleStore Database Configuration
# Get these from your SingleStore portal or admin
SINGLESTORE_HOST=your-workspace.singlestore.com
SINGLESTORE_PORT=3306
SINGLESTORE_USER=admin
SINGLESTORE_PASSWORD=your-secure-password
SINGLESTORE_DATABASE=your_database_name

# Optional: Multiple Database Configuration
# Use this format to connect to multiple SingleStore databases
# SINGLESTORE_CONFIGS='[{"id":"primary","host":"workspace1.singlestore.com","port":3306,"user":"admin","password":"pass1","database":"db1","description":"Primary Database"},{"id":"analytics","host":"workspace2.singlestore.com","port":3306,"user":"readonly","password":"pass2","database":"analytics_db","description":"Analytics Database"}]'

# SSL Configuration (Optional but recommended for production)
# Download CA certificate from SingleStore portal
# SINGLESTORE_SSL_CERT=/path/to/singlestore-ca-cert.pem

# Security Configuration
# Generate a strong API key for production: openssl rand -hex 32
MCP_API_KEY=992cb57cfa80606d2382296889d303755505d5a4e9eaba0cfdfe832348be8fcd

# Rate Limiting Configuration
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ENABLED=true

# Deployment Configuration
DEPLOYMENT_MODE=remote  # Change to 'remote' for DigitalOcean deployment
PORT=8080

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Query Configuration
MAX_QUERY_TIMEOUT=30  # Maximum query execution time in seconds
MAX_RESULT_ROWS=10000000  # Maximum rows to return per query
ENABLE_QUERY_CACHE=false  # Enable query result caching

# Vector Search Configuration
MAX_VECTOR_DIMENSIONS=1536  # Maximum dimensions for vector search (OpenAI embeddings = 1536)
DEFAULT_VECTOR_SEARCH_LIMIT=10  # Default number of results for vector search

# DigitalOcean Specific (for remote deployment)
# DO_SPACES_KEY=your-spaces-key  # For storing large results
# DO_SPACES_SECRET=your-spaces-secret
# DO_SPACES_BUCKET=mcp-results
# DO_SPACES_REGION=nyc3

# Monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key